<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Number", :number %></th>
			<th><%= casein_sort_link "From", :from %></th>
			<th><%= casein_sort_link "To", :to %></th>
			<th><%= casein_sort_link "Date", :date %></th>
			<th><%= casein_sort_link "Plane", :plane_id %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% flights.each do |flight| %>
		<tr>
			<td><%= casein_table_cell_link flight.number, casein_flight_path(flight) %></td>
			<td><%= casein_table_cell_link flight.from, casein_flight_path(flight) %></td>
			<td><%= casein_table_cell_link flight.to, casein_flight_path(flight) %></td>
			<td><%= casein_table_cell_link flight.date, casein_flight_path(flight) %></td>
			<td><%= casein_table_cell_link flight.plane_id, casein_flight_path(flight) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_flight_path(flight), :method => :delete, :data => { :confirm => "Are you sure you want to delete this flight?" }) %>
			</td>
		</tr>
	<% end %>
</table>